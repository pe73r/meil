<section data-section-type="faq" data-section-id="{{ section.id }}" class="section-faqs">
  <div class="container-faqs">
      <header class="Page__Header">
        <div class="SectionHeader SectionHeader--center">
           <div class="SectionHeader__Heading Page__Heading Heading u-h1 Page__section-title">
            {{ section.settings.heading }}
           </div>
        </div>
      </header>
      <div class="PageFaqs">
       <div class="Faq">
        <div class="grid">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'separator' -%}
              <div class="Faq__separator">
                 {% if block.settings.picto != blank  %}
                  <div class="Faq__picto">
                    <img src="{{ block.settings.picto | img_url:'master'}}" alt="{{ block.settings.picto.alt }}">
                  </div>
                {% endif %}
                <h2 class=" Faq__Heading Heading u-h1 align-center" {{ block.shopify_attributes }}>
                  <span class="Anchor" id="block-{{ block.id }}"></span>
                  {{- block.settings.title | escape -}}
                </h2>
               </div>
              {%- when 'question' -%}
               <div class="1/2--lap-and-up grid__cell">
                 <div class="accordion_container">
                    <div class="accordion-main">
                      <div class="accordion_head"><p>{{ block.settings.title }}</p><span class="plusminus">+</span></div>
                      <div class="accordion_body" style="display: none;">
                        <p>{{ block.settings.answer }}</p>
                      </div>
                    </div>
                </div>
              </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
     </div>
   </div>
</section>
<script
  src="https://code.jquery.com/jquery-3.5.1.js"
  integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
  crossorigin="anonymous"></script>
<script>
$(document).ready(function() {
   //toggle the component with class accordion_body
   $(".accordion_head").click(function() {
     $(this).removeClass('coll-back');
     if ($('.accordion_body').is(':visible')) {
       $(".accordion_body").slideUp(300);
       $(".plusminus").text('+');
       $(this).removeClass('coll-back');
       $('.rmv-cls').removeClass('coll-back');
     }

     if($(this).next(".accordion_body").is(':visible')) {
       $(this).next(".accordion_body").slideUp(300);
       $(this).children(".plusminus").text('+');
       $(this).removeClass('coll-back');
     }else {
       $(this).next(".accordion_body").slideDown(300);
       $(this).children(".plusminus").text('');
       $(this).children(".plusminus").append('<hr class="hr-clc">');
       $(this).toggleClass('coll-back');
       $(this).addClass('rmv-cls');
     }
   });
 });
</script>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title",
      "default": "Nos réponses à vos questions"
    }

  ],
  "blocks": [
    {
      "type": "separator",
      "name": "Section separator",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Default"
        },
        {
          "type": "image_picker",
          "id": "picto",
          "label": "Picto"
        }
      ]
    },
    {
      "type": "question",
      "name": "Question",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "separator",
        "settings": {
          "title": "Shipping"
        }
      },
      {
